interface Loopback0
 ip address {{ lo0_add }} 255.255.255.255
 no shutdown
!         
interface Loopback1
 ip address {{ lo1_add }} 255.255.255.0
 ip ospf 1 area 0
 no shutdown
!
interface Tunnel0
 ip address {{ tun0_add }} 255.255.255.0
 ip ospf 1 area 0
 tunnel source Loopback0
 tunnel destination 10.255.255.100
 no shutdown
!
interface Ethernet0/0
 description MGMT_INTERFACE
!
interface Ethernet0/1
 description CONNECT TO ISP
 ip address {{ wan_ip_add }} 255.255.255.252
 no shutdown
!
router ospf 1
 router-id {{ lo0_add }}
!
router bgp {{ as_num }}
 bgp log-neighbor-changes
 network {{ lo0_add }} mask 255.255.255.255
 neighbor {{ isp_gw_add }} remote-as 100
!
ntp source Loopback0
ntp server 10.255.255.100
!
no ip domain lookup
!